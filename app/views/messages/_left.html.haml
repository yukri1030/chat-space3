.wrapper--leftside
  .wrapper--leftside--btn
    .wrapper--leftside--btn--name
      = current_user.name
    %ul.wrapper--leftside--icon
      %list.wrapper--leftside--icon--edit
        = link_to new_group_path do
          = fa_icon 'pencil-square-o', class: 'icon'
      %list.wrapper--leftside--icon--new
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'
  .leftside
    .leftside--group1
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .leftside--sample
          = group.name
          .leftside--message
          = group.show_last_message